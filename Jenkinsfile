pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t jenkins-system-check .'
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker run --rm jenkins-system-check'
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully ğŸ‰'
        }
        failure {
            echo 'Pipeline failed âŒ'
        }
    }
}

